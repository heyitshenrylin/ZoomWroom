<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
         Customize your theme here.
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="windowNoTitle">false</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">true</item>
    </style>

    <style name="PrimaryButtonRegisterRider" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextDefaultRiderRegister" parent="Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/CyanBlueGreen</item>
        <item name="android:textColorHint">@color/CyanBlueGreen</item>
        <item name="android:background">@drawable/rider_signup_shape</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="EditTextDefaultDriverRegister" parent="EditTextDefaultRiderRegister">
        <item name="android:background">@drawable/driversignup_text_shape</item>
    </style>

    <style name="PrimaryButtonRegisterDriver" parent="PrimaryButtonRegisterRider">
        <item name="backgroundTint">@color/colorPrimaryGreen</item>
    </style>

    <style name="EditTextDefaultDriverLogin" parent="EditTextDefaultRiderRegister">
        <item name="android:backgroundTint">@color/DarkSlate</item>
        <item name="android:textColorHint">@color/CyanBlueGreen</item>
        <item name="android:textColor">@color/CyanBlueGreen</item>
    </style>

    <style name="TextViewAcceptRequest" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    
    <style name="TextViewAcceptRequest2" parent="TextViewAcceptRequest">
        <item name="android:textColor">@color/CyanBlueGreen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextInputUserEditProfile" parent="">
        <item name="android:textColor">@color/DarkSlate</item>

    </style>

    <style name="TextLayoutStyleUserEditProfile" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="hintTextColor">@color/CyanBlueGreen</item>
        <item name="android:textColorHint">@color/CyanBlueGreen</item>
        <item name="boxStrokeColor">@color/CyanBlueGreen</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="DialogFragmentStyle">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ProfileButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/headings</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
